<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="865dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="276dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/group_2" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlack"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/logEmail"
            android:layout_width="389dp"
            android:layout_height="66dp"
            android:ems="10"
            android:hint="First Name"
            android:textColor="@color/colorBlack"
            android:textColorHighlight="@color/colorBlack"
            android:textColorHint="@color/colorBlack" />

        <EditText
            android:id="@+id/lastsername"
            android:layout_width="389dp"
            android:layout_height="66dp"
            android:ems="10"
            android:hint="Last Name"
            android:textColor="@color/colorBlack"
            android:textColorHighlight="@color/colorBlack"
            android:textColorHint="@color/colorBlack" />

        <EditText
            android:id="@+id/email"
            android:layout_width="389dp"
            android:layout_height="66dp"
            android:ems="10"
            android:hint="Email"
            android:textColor="@color/colorBlack"
            android:textColorHighlight="@color/colorBlack"
            android:textColorHint="@color/colorBlack" />

        <EditText
            android:id="@+id/logPassword"
            android:layout_width="392dp"
            android:layout_height="64dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack" />


        <Button
            android:id="@+id/btnLogin4"
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"

            android:layout_weight="1"
            android:backgroundTint="#6EA4E6"
            android:text="Create Account" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <Space
                android:layout_width="59dp"
                android:layout_height="53dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textVie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Donâ€™t have an account?"

                android:textAlignment="center"
                android:textColor="#8A8D97"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textVi"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="#3382EB"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>